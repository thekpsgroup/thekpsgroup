<script>
  // Optimized header functionality
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.querySelector('header') as HTMLElement;
    const mobileMenu = document.querySelector('#mobileMenu') as HTMLElement;
    const toggleBtn = document.querySelector('#menuToggle') as HTMLButtonElement;
    const hamburgerIcon = document.querySelector('#hamburgerIcon') as HTMLElement;
    const closeIcon = document.querySelector('#closeIcon') as HTMLElement;
    const headerBg = document.querySelector('#headerBg') as HTMLElement;
    let isMenuOpen = false;
    let ticking = false;

    // Throttled scroll handler for better performance
    function handleScroll() {
      if (!ticking) {
        requestAnimationFrame(() => {
          const scrollY = window.scrollY;
          const isScrolled = scrollY > 50;
          
          if (headerBg && header) {
            headerBg.style.opacity = isScrolled ? '1' : '0';
            if (isScrolled) {
              header.style.boxShadow = '0 25px 50px -12px rgba(0, 0, 0, 0.25)';
            } else {
              header.style.boxShadow = '';
            }
          }
          
          ticking = false;
        });
        ticking = true;
      }
    }

    // Optimized mobile menu toggle
    function toggleMobileMenu() {
      isMenuOpen = !isMenuOpen;
      
      if (isMenuOpen) {
        mobileMenu && (mobileMenu.style.display = 'block');
        requestAnimationFrame(() => {
          mobileMenu && (mobileMenu.style.opacity = '1');
          mobileMenu && (mobileMenu.style.transform = 'scale(1)');
        });
        hamburgerIcon && (hamburgerIcon.style.display = 'none');
        closeIcon && (closeIcon.style.display = 'block');
        document.body.style.overflow = 'hidden';
        toggleBtn?.setAttribute('aria-expanded', 'true');
      } else {
        mobileMenu && (mobileMenu.style.opacity = '0');
        mobileMenu && (mobileMenu.style.transform = 'scale(0.95)');
        setTimeout(() => {
          mobileMenu && (mobileMenu.style.display = 'none');
        }, 200);
        hamburgerIcon && (hamburgerIcon.style.display = 'block');
        closeIcon && (closeIcon.style.display = 'none');
        document.body.style.overflow = '';
        toggleBtn?.setAttribute('aria-expanded', 'false');
      }
    }

    // Event listeners with performance optimizations
    window.addEventListener('scroll', handleScroll, { passive: true });
    toggleBtn?.addEventListener('click', toggleMobileMenu);
    
    document.addEventListener('click', (e) => {
      if (isMenuOpen && e.target instanceof Node && !header?.contains(e.target)) {
        toggleMobileMenu();
      }
    }, { passive: true });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isMenuOpen) {
        toggleMobileMenu();
        toggleBtn?.focus();
      }
    });

    // Close menu on navigation clicks
    mobileMenu?.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        if (isMenuOpen) toggleMobileMenu();
      });
    });
  });
</script>

