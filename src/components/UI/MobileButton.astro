---
// Mobile-optimized button with proper touch targets
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  fullWidth?: boolean;
  className?: string;
  disabled?: boolean;
  ariaLabel?: string;
}

const { 
  href, 
  variant = 'primary', 
  size = 'md', 
  fullWidth = false,
  className = '',
  disabled = false,
  ariaLabel
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-semibold rounded-lg transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-opacity-50 active:scale-95 touch-manipulation';

const variantClasses = {
  primary: 'bg-gradient-to-r from-gold to-warning-400 text-black hover:from-warning-400 hover:to-gold focus:ring-warning-400 hover:shadow-lg hover:scale-105',
  secondary: 'bg-accent-600 hover:bg-accent-700 text-white focus:ring-accent-400 hover:shadow-lg hover:scale-105',
  outline: 'border-2 border-warning-400 text-warning-400 hover:bg-warning-400 hover:text-black focus:ring-warning-400'
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm min-h-[40px]',
  md: 'px-6 py-3 text-base min-h-[44px]',
  lg: 'px-8 py-4 text-lg min-h-[48px]'
};

const widthClass = fullWidth ? 'w-full' : '';

const finalClasses = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${widthClass} ${className} ${disabled ? 'opacity-50 cursor-not-allowed' : ''}`;

const Tag = href ? 'a' : 'button';
---

<Tag 
  class={finalClasses}
  href={href}
  disabled={disabled}
  aria-label={ariaLabel}
  {...href && { target: href.startsWith('http') ? '_blank' : undefined }}
  {...href && href.startsWith('http') && { rel: 'noopener noreferrer' }}
>
  <slot />
</Tag>

<style>
  /* Ensure minimum touch target size on mobile */
  @media (max-width: 768px) {
    button, a {
      min-height: 44px;
      min-width: 44px;
    }
  }
  
  /* Remove default iOS button styling */
  button, input[type="submit"], input[type="button"] {
    -webkit-appearance: none;
    appearance: none;
    border-radius: 8px;
  }
  
  /* Improve focus visibility */
  *:focus-visible {
    outline: 2px solid #f59e0b;
    outline-offset: 2px;
  }
</style>
