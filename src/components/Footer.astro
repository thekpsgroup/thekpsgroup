---
import { BUSINESS } from '../data/constants';
import { CITIES } from '../data/constants';
import { slugify } from '../utils/slug';
import { CONTACT } from '../constants/contact';

const currentYear = new Date().getFullYear();
const topCities = CITIES.slice(0, 8).sort();
---

<footer class="bg-gradient-to-b from-accent-700 to-black border-t border-warning-400/20 text-gray-300" role="contentinfo">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="text-center mb-12">
      <a
        href="/contact"
        class="inline-block bg-warning-400 hover:bg-warning-300 text-black font-bold py-4 px-8 rounded-lg transition-colors"
      >
        Book My Free Consult
      </a>
    </div>
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <div class="flex items-center gap-3 mb-6">
          <picture>
            <source srcset="/logos/the-kps-group.webp" type="image/webp">
            <img
              src="/logos/the-kps-group.png"
              alt={`${BUSINESS.brand} logo`}
              class="h-8 w-auto"
              loading="lazy"
              width="32"
              height="32"
            />
          </picture>
          <span class="text-xl font-bold text-white">{BUSINESS.brand}</span>
        </div>
        <p class="text-gray-400 leading-relaxed mb-6 max-w-sm">
          {BUSINESS.blurb}
        </p>
        
        <!-- Contact Info -->
        <div class="space-y-3">
          <div class="flex items-center gap-3">
            <svg class="w-4 h-4 text-warning-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <a href={CONTACT.phoneHref} class="text-sm text-gray-300 hover:text-warning-400 transition-colors">
              {BUSINESS.phone}
            </a>
          </div>
          <div class="flex items-center gap-3">
            <svg class="w-4 h-4 text-warning-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <a href={`mailto:${CONTACT.email}`} class="text-sm text-gray-300 hover:text-warning-400 transition-colors">
              {CONTACT.email}
            </a>
          </div>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h4 class="text-white font-semibold mb-6">Services</h4>
        <ul class="space-y-3">
          <li>
            <a href="/services/bookkeeping" class="text-sm text-gray-400 hover:text-accent-400 transition-colors">
              Bookkeeping Services
            </a>
          </li>
          <li>
            <a href="/services/technology-consulting" class="text-sm text-gray-400 hover:text-accent-400 transition-colors">
              Technology Consulting
            </a>
          </li>
        </ul>
      </div>

      <!-- Modern Suite -->
      <div>
        <h4 class="text-white font-semibold mb-6">The Modern Suite</h4>
        <ul class="space-y-3">
          <li>
            <a href="https://modernpayroll.co" target="_blank" rel="noopener noreferrer" class="text-sm text-gray-400 hover:text-accent-400 transition-colors">
              Modern Pay
            </a>
          </li>
          <li>
            <a href="https://modernledger.co" target="_blank" rel="noopener noreferrer" class="text-sm text-gray-400 hover:text-accent-400 transition-colors">
              Modern Ledger
            </a>
          </li>
          <li>
            <a href="https://modernbrands.co" target="_blank" rel="noopener noreferrer" class="text-sm text-gray-400 hover:text-accent-400 transition-colors">
              Modern Brands
            </a>
          </li>
          <li>
            <a href="https://moderntechstack.co" target="_blank" rel="noopener noreferrer" class="text-sm text-gray-400 hover:text-accent-400 transition-colors">
              Modern Stack
            </a>
          </li>
          <li>
            <a href="https://modernconsulting.co" target="_blank" rel="noopener noreferrer" class="text-sm text-gray-400 hover:text-accent-400 transition-colors">
              Modern Consulting
            </a>
          </li>
          <li>
            <a href="https://app.modernos.app" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2">
              <span class="text-sm text-gray-400 hover:text-accent-400 transition-colors">Modern OS</span>
            </a>
            </a>
          </li>
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="text-white font-semibold mb-6">Company</h4>
        <ul class="space-y-3">
          <li>
            <a href="/" class="text-sm text-gray-400 hover:text-accent-400 transition-colors">
              Home
            </a>
          </li>
          <li>
            <a href="/about" class="text-sm text-gray-400 hover:text-accent-400 transition-colors">
              About
            </a>
          </li>
          <li>
            <a href="/leadership" class="text-sm text-gray-400 hover:text-accent-400 transition-colors">
              Leadership
            </a>
          </li>
          <li>
            <a href="mailto:sales@thekpsgroup.com?subject=General Inquiry" class="text-sm text-gray-400 hover:text-accent-400 transition-colors">
              Contact
            </a>
          </li>
        </ul>
        
        <!-- Social Media -->
        <div class="mt-8">
          <h5 class="text-white font-medium mb-4">Follow Us</h5>
          <a 
            href="https://www.facebook.com/OGKPSGroup" 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-gray-400 hover:text-accent-400 transition-colors text-sm"
            aria-label="Follow us on Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Facebook
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8 mt-12">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-sm text-gray-400">
          Â© {currentYear} {BUSINESS.name}. All rights reserved.
        </div>
        <div class="flex items-center gap-6 text-sm">
          <a href="mailto:sales@thekpsgroup.com?subject=Privacy Policy Question" class="text-gray-400 hover:text-accent-400 transition-colors">
            Privacy Policy
          </a>
          <a href="mailto:sales@thekpsgroup.com?subject=Terms of Service Question" class="text-gray-400 hover:text-accent-400 transition-colors">
            Terms of Service
          </a>
          <!-- Discreet CRM Access -->
          <a href="/login" class="flex items-center gap-1 text-gray-500 hover:text-accent-400 transition-colors opacity-70 hover:opacity-100" title="CRM Access">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            <span class="text-xs">CRM</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
