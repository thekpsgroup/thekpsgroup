---
// Enhanced Hero with Dark Blue (#313F57) and Yellow (#f8d673) Theme
import { BUSINESS } from '../data/constants';

const headline = "The Modern Suite";
const subheadline = "Empowering Small Business Success";
const description = "Six specialized companies united under one platform, delivering everything small businesses need to scale efficiently and profitably.";
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Dynamic Background with Dark Blue Theme -->
  <div class="absolute inset-0 bg-gradient-to-br from-accent-700 via-black to-accent-700"></div>
  
  <!-- Animated Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute top-20 left-20 w-96 h-96 bg-warning-400/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-20 right-20 w-80 h-80 bg-warning-400/5 rounded-full blur-2xl animate-pulse" style="animation-delay: -2s;"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-radial from-warning-400/5 to-transparent rounded-full animate-float"></div>
  </div>

  <!-- Hero Content -->
  <div class="relative z-10 container mx-auto px-6 py-20">
    <div class="max-w-6xl mx-auto text-center">
      
      <!-- Premium Logo Display -->
      <div class="mb-12 animate-fade-in">
        <div class="relative inline-block">
          <img 
            src="/logos/the-modern-suite.png" 
            alt="The KPS Group - The Modern Suite"
            class="h-32 lg:h-40 w-auto mx-auto drop-shadow-2xl"
            loading="eager"
          />
          <div class="absolute inset-0 bg-warning-400/20 rounded-full blur-2xl scale-110 animate-glow"></div>
        </div>
      </div>

      <!-- Enhanced Typography -->
      <div class="mb-16">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 animate-fade-in" style="animation-delay: 0.2s;">
          <span class="text-white">The</span>
          <span class="text-gradient-enhanced ml-4">Modern Suite</span>
        </h1>
        
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-light text-warning-400/90 mb-8 animate-fade-in" style="animation-delay: 0.3s;">
          {subheadline}
        </h2>
        
        <p class="text-xl md:text-2xl text-white/80 max-w-4xl mx-auto leading-relaxed animate-fade-in" style="animation-delay: 0.4s;">
          {description}
        </p>
      </div>

      <!-- Enhanced CTAs -->
      <div class="mb-20 animate-fade-in" style="animation-delay: 0.5s;">
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-12 max-w-2xl mx-auto">
          <a href="/about" class="group relative inline-flex items-center justify-center gap-3 bg-gradient-to-r from-warning-500 to-warning-400 hover:from-warning-400 hover:to-warning-300 text-accent-700 font-bold px-10 py-5 rounded-2xl transition-all duration-500 hover:scale-110 hover:shadow-2xl hover:shadow-warning-400/40 overflow-hidden w-full sm:w-auto transform hover:rotate-1">
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -skew-x-12 -translate-x-full group-hover:animate-shimmer"></div>
            <span class="text-xl relative z-10">Explore Our Solutions</span>
            <svg class="w-6 h-6 group-hover:translate-x-2 transition-transform duration-300 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
          
          <a href="mailto:sales@thekpsgroup.com?subject=Premium Consultation&body=I'm ready to transform my business with The Modern Suite." class="group relative inline-flex items-center justify-center gap-3 bg-accent-700/30 hover:bg-accent-700/50 backdrop-blur-xl text-white font-semibold px-10 py-5 rounded-2xl border-2 border-warning-400/40 hover:border-warning-400/80 transition-all duration-500 hover:scale-105 hover:shadow-xl hover:shadow-accent-700/30 w-full sm:w-auto transform hover:-rotate-1">
            <svg class="w-6 h-6 group-hover:scale-125 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <span class="text-xl">Get Premium Consultation</span>
          </a>
        </div>
      </div>

      <!-- Enhanced Stats with New Color Scheme -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 animate-fade-in" style="animation-delay: 0.6s;">
        <div class="bg-accent-700/20 backdrop-blur-xl border border-warning-400/20 rounded-2xl p-8 hover:bg-accent-700/30 transition-all duration-500 hover:scale-105 hover:border-warning-400/40">
          <div class="text-5xl font-bold text-gradient-enhanced mb-3">6</div>
          <div class="text-white font-medium text-lg">Specialized Companies</div>
        </div>
        <div class="bg-accent-700/20 backdrop-blur-xl border border-warning-400/20 rounded-2xl p-8 hover:bg-accent-700/30 transition-all duration-500 hover:scale-105 hover:border-warning-400/40">
          <div class="text-5xl font-bold text-gradient-enhanced mb-3">1000+</div>
          <div class="text-white font-medium text-lg">Small Businesses Served</div>
        </div>
        <div class="bg-accent-700/20 backdrop-blur-xl border border-warning-400/20 rounded-2xl p-8 hover:bg-accent-700/30 transition-all duration-500 hover:scale-105 hover:border-warning-400/40">
          <div class="text-5xl font-bold text-gradient-enhanced mb-3">99%</div>
          <div class="text-white font-medium text-lg">Client Satisfaction</div>
        </div>
      </div>

      <!-- Enhanced Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <div class="w-6 h-10 border-2 border-warning-400/60 rounded-full p-1">
          <div class="w-1 h-3 bg-warning-400 rounded-full animate-pulse mx-auto"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.text-gradient-enhanced {
  background: linear-gradient(135deg, #f8d673 0%, #fce7b3 30%, #f8d673 60%, #e6b429 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  filter: drop-shadow(0 0 10px rgba(248, 214, 115, 0.3));
}

@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%) skewX(-12deg);
  }
  100% {
    transform: translateX(200%) skewX(-12deg);
  }
}

@keyframes float {
  0%, 100% {
    transform: translate(-50%, -50%) translateY(0px) rotate(0deg);
  }
  33% {
    transform: translate(-50%, -50%) translateY(-10px) rotate(1deg);
  }
  66% {
    transform: translate(-50%, -50%) translateY(5px) rotate(-1deg);
  }
}

@keyframes glow {
  0%, 100% {
    opacity: 0.3;
    transform: scale(1.1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.2);
  }
}

.animate-fade-in {
  animation: fade-in 1s ease-out forwards;
  opacity: 0;
}

.animate-shimmer {
  animation: shimmer 1.5s ease-in-out;
}

.animate-float {
  animation: float 8s ease-in-out infinite;
}

.animate-glow {
  animation: glow 3s ease-in-out infinite;
}

/* Enhanced responsive design */
@media (max-width: 640px) {
  .text-5xl {
    font-size: 3rem;
    line-height: 1.1;
  }
  
  .text-6xl {
    font-size: 3.5rem;
    line-height: 1.1;
  }
  
  .text-7xl {
    font-size: 4rem;
    line-height: 1.1;
  }
}
</style>
