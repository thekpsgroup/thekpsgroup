---
// Professional messaging for holding company positioning
const headline = "The Modern Suite";
const subheadline = "Empowering Small Business Success Through Integrated Solutions";
const description = "The KPS Group brings together six specialized companies under one unified platform, giving small business owners everything they need to scale efficiently and profitably.";
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-black">
  <!-- Hero Background Image -->
  <div class="absolute inset-0">
    <img 
      src="/logos/the-modern-suite.png" 
      alt="The KPS Group - The Modern Suite"
      class="w-full h-full object-contain object-center opacity-90"
      loading="eager"
    />
    <!-- Professional overlay for text readability with dark blue accent -->
    <div class="absolute inset-0 bg-gradient-to-br from-black/90 via-accent-700/60 to-black/95"></div>
  </div>
  
  <!-- Subtle geometric elements -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-gradient-to-r from-warning-400/15 to-accent-700/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-gradient-to-l from-accent-700/10 to-warning-400/10 rounded-full blur-3xl animate-pulse" style="animation-delay: -3s;"></div>
  </div>

  <div class="relative z-10 container mx-auto px-6 py-20">
    <div class="max-w-6xl mx-auto">
      
      <!-- Company Badge -->
      <div class="text-center mb-12 animate-fade-in">
        <div class="inline-flex items-center gap-3 bg-white/10 backdrop-blur-sm border border-accent-600/30 rounded-full px-8 py-4 mb-8">
          <div class="w-3 h-3 bg-accent-500 rounded-full animate-pulse"></div>
          <span class="text-accent-400 font-semibold tracking-wider text-sm uppercase">Professional Holding Company</span>
          <div class="w-3 h-3 bg-accent-500 rounded-full animate-pulse"></div>
        </div>
      </div>

      <!-- Main Headlines -->
      <div class="text-center mb-16 animate-fade-in" style="animation-delay: 0.2s;">
        <h1 class="text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold text-white mb-8 leading-tight">
          {headline}
        </h1>
        
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-medium text-warning-400 mb-8 max-w-5xl mx-auto leading-relaxed">
          {subheadline}
        </h2>
        
        <p class="text-xl md:text-2xl text-white/90 max-w-4xl mx-auto leading-relaxed font-light">
          {description}
        </p>
      </div>

      <!-- Professional CTAs -->
      <div class="text-center mb-20 animate-fade-in" style="animation-delay: 0.4s;">
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12 max-w-2xl mx-auto">
          <a href="/about" class="group relative inline-flex items-center justify-center gap-3 bg-gradient-to-r from-warning-500 to-warning-400 hover:from-warning-600 hover:to-warning-500 text-accent-700 font-semibold px-8 py-4 rounded-xl transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-warning-400/30 overflow-hidden w-full sm:w-auto" data-track="cta">
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -skew-x-12 -translate-x-full group-hover:animate-shimmer"></div>
            <span class="text-lg relative z-10">Explore The Modern Suite</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
          
          <a href="mailto:sales@thekpsgroup.com?subject=Consultation Request&body=Hello, I'm interested in learning more about The Modern Suite and how it can help my business." class="group relative inline-flex items-center justify-center gap-2 bg-accent-700/20 hover:bg-accent-700/30 backdrop-blur-sm text-white font-medium px-4 py-2 rounded-lg border border-accent-700/40 hover:border-warning-400/50 transition-all duration-300 hover:scale-105 hover:shadow-lg w-full sm:w-auto text-sm" data-track="cta">
            <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <span>Contact Sales</span>
          </a>
        </div>
        
        <!-- Trust indicators -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-8 text-sm text-white/60 animate-fade-in" style="animation-delay: 0.6s;">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>Free Consultation</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>No Long-term Contracts</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>Results Guaranteed</span>
          </div>
        </div>
      </div>

      <!-- Company Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-20 animate-fade-in" style="animation-delay: 0.8s;">
        <div class="group text-center bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-gradient-to-br hover:from-white/15 hover:to-white/10 hover:border-accent-500/40 transition-all duration-300 hover:scale-105">
          <div class="text-5xl font-bold text-gradient-professional mb-4 group-hover:scale-110 transition-transform duration-300">6</div>
          <div class="text-xl font-semibold text-white mb-3">Specialized Companies</div>
          <div class="text-white/70 leading-relaxed">Integrated solutions for every business need</div>
          <div class="mt-4 w-12 h-1 bg-gradient-to-r from-accent-500 to-accent-400 rounded-full mx-auto group-hover:w-16 transition-all duration-300"></div>
        </div>
        
        <div class="group text-center bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-gradient-to-br hover:from-white/15 hover:to-white/10 hover:border-accent-500/40 transition-all duration-300 hover:scale-105">
          <div class="text-5xl font-bold text-gradient-professional mb-4 group-hover:scale-110 transition-transform duration-300">250+</div>
          <div class="text-xl font-semibold text-white mb-3">Businesses Empowered</div>
          <div class="text-white/70 leading-relaxed">Small businesses scaled successfully</div>
          <div class="mt-4 w-12 h-1 bg-gradient-to-r from-accent-500 to-accent-400 rounded-full mx-auto group-hover:w-16 transition-all duration-300"></div>
        </div>
        
        <div class="group text-center bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-gradient-to-br hover:from-white/15 hover:to-white/10 hover:border-accent-500/40 transition-all duration-300 hover:scale-105">
          <div class="text-5xl font-bold text-gradient-professional mb-4 group-hover:scale-110 transition-transform duration-300">99%</div>
          <div class="text-xl font-semibold text-white mb-3">Client Satisfaction</div>
          <div class="text-white/70 leading-relaxed">Proven results and lasting partnerships</div>
          <div class="mt-4 w-12 h-1 bg-gradient-to-r from-accent-500 to-accent-400 rounded-full mx-auto group-hover:w-16 transition-all duration-300"></div>
        </div>
      </div>

      <!-- Mission Statement -->
      <div class="text-center animate-fade-in" style="animation-delay: 1s;">
        <div class="bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-sm border border-accent-600/20 rounded-3xl max-w-5xl mx-auto p-12 hover:border-accent-500/40 transition-all duration-500 group">
          <div class="mb-8">
            <svg class="w-16 h-16 text-accent-400 mx-auto mb-6 group-hover:scale-110 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
            </svg>
          </div>
          <blockquote class="text-2xl md:text-3xl lg:text-4xl font-light text-white leading-relaxed mb-8 italic">
            "Small businesses are the backbone of our economy. They deserve enterprise-level solutions without enterprise-level complexity. The Modern Suite makes that possible."
          </blockquote>
          <div class="flex items-center justify-center gap-4">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-accent-500 to-accent-600 flex items-center justify-center text-white font-bold text-lg">
              K
            </div>
            <cite class="text-accent-400 font-semibold text-xl">â€” Karson Lawrence, Founder & CEO</cite>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced scroll indicator with better mobile positioning -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white/60 animate-bounce hidden sm:flex">
    <div class="flex flex-col items-center gap-2">
      <span class="text-xs font-medium tracking-wider uppercase">Discover Our Companies</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </div>
  
  <!-- Mobile-optimized scroll indicator -->
  <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 sm:hidden">
    <div class="animate-bounce">
      <svg class="w-5 h-5 text-warning-400/60 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </div>
</section>

<style>
.text-gradient-professional {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 50%, #1d4ed8 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.text-gradient-gold {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 50%, #1d4ed8 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%) skewX(-12deg);
  }
  100% {
    transform: translateX(200%) skewX(-12deg);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-10px);
  }
}

.animate-fade-in {
  animation: fade-in 1s ease-out forwards;
}

.animate-shimmer {
  animation: shimmer 1.5s ease-in-out;
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

/* Enhanced hover effects */
.group:hover .group-hover\:animate-shimmer {
  animation: shimmer 1.5s ease-in-out;
}

/* Improved responsive design */
@media (max-width: 640px) {
  .text-5xl {
    font-size: 3rem;
    line-height: 1;
  }
  
  .text-6xl {
    font-size: 3.5rem;
    line-height: 1;
  }
  
  .text-7xl {
    font-size: 4rem;
    line-height: 1;
  }
}
</style>
