---
// Optimized hero component for maximum conversion
export interface Props {
  variant?: 'default' | 'consultation' | 'results';
}

const { variant = 'default' } = Astro.props;

// Hero content variants
const heroVariants = {
  default: {
    headline: "Run Your Business, Not Paperwork",
    subheadline: "We handle ops, finance and tech so you can focus on customers.",
    ctaText: "Book My Free Consult",
    ctaSubtext: "Quick call. No pressure.",
    benefits: [
      "Boost profit 25%",
      "Setup in a day",
      "24/7 support"
    ]
  },
  consultation: {
    headline: "Discover $10K+ in Hidden Business Savings",
    subheadline: "Free 30-minute consultation reveals profit leaks and growth opportunities most business owners miss",
    ctaText: "Book My FREE Consultation",
    ctaSubtext: "Usually $500 - FREE for a limited time",
    benefits: [
      "Book your free consultation",
      "Identify profit opportunities", 
      "Get custom recommendations",
      "Same-day response guaranteed"
    ]
  },
  results: {
    headline: "See Real Results in 30 Days",
    subheadline: "Join 300+ businesses already saving $10K+ annually with our proven systems",
    ctaText: "Get My Results Roadmap",
    ctaSubtext: "Free consultation + implementation plan",
    benefits: [
      "Proven 25-40% profit increase",
      "50% reduction in admin time",
      "3X faster growth rate",
      "90-day results guarantee"
    ]
  }
};

const hero = heroVariants[variant];
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-black via-gray-900 to-black">
  <!-- Background Elements -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-warning-400/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-warning-400/10 rounded-full blur-2xl animate-pulse" style="animation-delay: -2s;"></div>
  </div>

  <div class="relative z-10 container mx-auto px-6 py-20">
    <div class="max-w-6xl mx-auto">
      
      <!-- Trust Badge -->
      <div class="text-center mb-8 animate-fade-in">
        <div class="inline-flex items-center gap-3 bg-green-500/10 backdrop-blur-sm border border-green-500/30 rounded-full px-6 py-3">
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
          <span class="text-green-400 font-medium tracking-wide text-sm">âœ“ Trusted by 300+ Businesses</span>
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
        </div>
      </div>

      <!-- Main Headlines -->
      <div class="text-center mb-12 animate-fade-in" style="animation-delay: 0.2s;">
        <h1 class="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-white mb-6 leading-tight">
          {hero.headline}
        </h1>
        
        <p class="text-xl md:text-2xl lg:text-3xl text-gray-300 mb-8 max-w-4xl mx-auto leading-relaxed">
          {hero.subheadline}
        </p>
        
        <!-- Benefits Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12 animate-fade-in" style="animation-delay: 0.4s;">
          {hero.benefits.map((benefit, index) => (
            <div class="bg-white/5 backdrop-blur-sm border border-white/10 rounded-xl p-4 text-center hover:border-warning-400/30 transition-all">
              <div class="text-warning-400 font-semibold text-sm mb-1">âœ“</div>
              <div class="text-white text-sm">{benefit}</div>
            </div>
          ))}
        </div>

        <!-- Primary CTA -->
        <div class="text-center mb-16 animate-fade-in" style="animation-delay: 0.6s;">
          <div class="max-w-md mx-auto">
            <!-- Value Proposition Box -->
            <div class="bg-gradient-to-r from-warning-400/20 to-warning-300/20 rounded-2xl p-6 mb-6 border border-warning-400/30">
              <div class="text-warning-400 font-bold text-2xl mb-2">FREE</div>
              <div class="text-white font-semibold mb-1">Business Assessment</div>
              <div class="text-gray-300 text-sm mb-3">{hero.ctaSubtext}</div>
              
              <a 
                href="/contact"
                class="block w-full bg-warning-400 hover:bg-warning-300 text-black font-bold py-4 px-8 rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-lg mb-3 cta-button"
                id="hero-cta"
              >
                ðŸš€ {hero.ctaText}
              </a>
              
              <div class="text-xs text-gray-400">
                âœ“ No spam &nbsp;â€¢&nbsp; âœ“ Same-day response &nbsp;â€¢&nbsp; âœ“ 24/7 support
              </div>
            </div>
          </div>

          <!-- Urgency Indicator -->
          <div class="inline-flex items-center gap-2 bg-red-500/10 border border-red-500/30 rounded-full px-4 py-2 text-sm text-red-400">
            <div class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></div>
            <span>ðŸ”¥ Only 3 consultation slots left this week</span>
          </div>
        </div>
      </div>

      <!-- Social Proof -->
      <div class="text-center animate-fade-in" style="animation-delay: 0.8s;">
        <div class="flex flex-wrap justify-center items-center gap-8 text-sm text-gray-400 mb-8">
          <div class="flex items-center gap-2">
            <div class="flex text-warning-400">â˜…â˜…â˜…â˜…â˜…</div>
            <span>98% Client Satisfaction</span>
          </div>
          <div>300+ Happy Clients</div>
          <div>10+ Years Experience</div>
          <div>Same-Day Setup</div>
        </div>

        <!-- Client Results Preview -->
        <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
          <div class="bg-gray-900/50 border border-gray-700/50 rounded-xl p-6 text-center">
            <div class="text-warning-400 text-2xl font-bold mb-2">40%</div>
            <div class="text-white text-sm">Average Profit Increase</div>
          </div>
          <div class="bg-gray-900/50 border border-gray-700/50 rounded-xl p-6 text-center">
            <div class="text-warning-400 text-2xl font-bold mb-2">50%</div>
            <div class="text-white text-sm">Time Savings</div>
          </div>
          <div class="bg-gray-900/50 border border-gray-700/50 rounded-xl p-6 text-center">
            <div class="text-warning-400 text-2xl font-bold mb-2">7-14</div>
            <div class="text-white text-sm">Days to Results</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .cta-button {
    box-shadow: 0 4px 14px rgba(248, 214, 115, 0.4);
  }
  
  .cta-button:hover {
    box-shadow: 0 8px 25px rgba(248, 214, 115, 0.6);
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }
</style>

<script>
  // Track CTA clicks
  document.addEventListener('DOMContentLoaded', () => {
    const ctaButton = document.getElementById('hero-cta');
    if (ctaButton) {
      ctaButton.addEventListener('click', () => {
        // Track conversion event
        if (typeof gtag !== 'undefined') {
          gtag('event', 'hero_cta_click', {
            event_category: 'Hero',
            event_label: 'Free Assessment CTA'
          });
        }
      });
    }
  });
</script>
