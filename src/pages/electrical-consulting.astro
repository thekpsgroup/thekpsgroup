---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BUSINESS } from '../data/constants';

const pageTitle = 'Electrical Consultant Near Me | Electrical Contractor Consulting | Electrical Business Consulting';
const pageDescription = 'Expert electrical business consulting services. Operations optimization, electrical contractor management, safety compliance, project management, and growth strategies for electrical contractors. Call 469-534-3392.';

const keywords = [
  'electrical consultant near me',
  'electrical contractor consultant',
  'electrical business consultant',
  'electrical consulting services',
  'electrical contractor advisor',
  'electrical operations consultant',
  'electrical project consultant',
  'electrical safety consultant',
  'electrical code consultant',
  'electrical management consulting',
  'electrical contractor coaching',
  'electrical business optimization',
  'electrical workflow consultant',
  'electrical estimating consultant',
  'electrical contractor growth',
  'electrical consultant Austin TX',
  'electrical consultant Dallas TX',
  'electrical consultant Houston TX',
  'nationwide electrical consulting',
  'remote electrical consulting'
];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Electrical Business Consulting Services",
  "description": pageDescription,
  "provider": {
    "@type": "Organization",
    "name": "The KPS Group LLC",
    "url": "https://thekpsgroup.com",
    "telephone": "469-534-3392"
  },
  "areaServed": "United States",
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Electrical Consulting Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Electrical Operations Optimization"
        }
      },
      {
        "@type": "Offer", 
        "itemOffered": {
          "@type": "Service",
          "name": "Safety & Compliance Management"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service", 
          "name": "Project Management Systems"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Electrical Business Growth Strategy"
        }
      }
    ]
  }
};
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  keywords={keywords}
  canonical="https://thekpsgroup.com/electrical-consulting"
  isServicePage={true}
  serviceName="Electrical Consulting"
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>

  <!-- Hero Section -->
  <section class="relative py-20 sm:py-24 lg:py-32 bg-gradient-to-b from-black to-gray-950">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-3 bg-white/10 backdrop-blur-sm border border-accent-600/30 rounded-full px-6 py-3 mb-8">
          <div class="w-2 h-2 bg-accent-500 rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-accent-400 tracking-wide uppercase">Electrical Consulting</span>
          <div class="w-2 h-2 bg-accent-500 rounded-full animate-pulse"></div>
        </div>
        
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-8 leading-tight">
          Expert <span class="text-gradient-accent">Electrical Business</span><br/>
          <span class="text-2xl sm:text-3xl lg:text-4xl font-normal text-white/80">Consulting Services</span>
        </h1>
        
        <p class="text-xl sm:text-2xl text-white/80 leading-relaxed mb-12">
          Optimize your electrical contracting business with proven strategies for safety, efficiency, project management, and profitable growth.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
          <a href="/contact" class="btn-primary text-lg px-8 py-4">
            Get Business Assessment
          </a>
          <a href="tel:4695343392" class="btn-secondary text-lg px-8 py-4">
            Call (469) 534-3392
          </a>
        </div>

        <!-- Trust Indicators -->
        <div class="flex flex-wrap justify-center gap-8 text-sm text-white/60">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>Electrical Industry Experts</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>Safety & Compliance Specialists</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>Proven Growth Results</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-20 bg-gray-950">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">Complete Electrical Business Solutions</h2>
        <p class="text-xl text-white/80 max-w-3xl mx-auto">From safety compliance to project management, we help electrical contractors build safer, more efficient, and more profitable businesses.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Operations Optimization -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Operations Optimization</h3>
          <p class="text-white/70 mb-6">Streamline your electrical operations for maximum safety, efficiency, and profitability.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• Workflow optimization</li>
            <li>• Resource allocation strategies</li>
            <li>• Quality control systems</li>
            <li>• Performance metrics & KPIs</li>
            <li>• Operational cost reduction</li>
