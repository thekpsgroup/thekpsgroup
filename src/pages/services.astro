// Modern Suite service offerings
const modernSuite = [
  {
    name: 'Modern Ledger',
    tagline: 'Bookkeeping that makes sense.',
    description: 'We don\'t just categorize transactions ‚Äî we bring meaning to your numbers. Modern Ledger delivers real-time, owner-focused financials that tell the story behind your business.',
    icon: 'üßæ',
    logo: '/logos/modern-ledger.svg',
    features: [
      'Cash flow visibility',
      'Owner-ready P&L reports', 
      'Month-end close and cleanup',
      'Audit-proof documentation',
      'Financial coaching & oversight'
    ],
    href: '/contact'
  },
  {
    name: 'Modern Pay',
    tagline: 'Payroll, HR, and compliance ‚Äî simplified.',
    description: 'Modern Pay gives you white-glove payroll processing with built-in HR compliance, time tracking, and onboarding ‚Äî all backed by real humans who give a damn.',
    icon: 'üí∏',
    logo: '/logos/modern-pay.svg',
    features: [
      'Payroll that just works',
