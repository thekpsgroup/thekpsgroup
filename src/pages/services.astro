const benefits = [
  {
    title: 'Fast Turnaround',
    description: 'Most projects completed within 48-72 hours',
    icon: 'M13 10V3L4 14h7v7l9-11h-7z'
  },
  {
    title: 'Premium Quality',
    description: 'Senior-level design talent on every project',
    icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'
  },
  {
    title: 'Fixed Pricing',
    description: 'No hidden fees or surprise costs',
    icon: 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1'
  },
  {
    title: 'Proven Results',
    description: '50+ successful projects and counting',
    icon: 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6'
  }
