---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Contact The KPS Group | Free Consult';
const pageDescription = 'Get answers fast. We usually reply within one business day.';
const error = Astro.url.searchParams.get('error');
---
<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="py-16 bg-gray-900 min-h-screen">
    <div class="max-w-2xl mx-auto px-4">
      <h1 class="text-4xl font-bold text-white mb-4 text-center">Talk with a Specialist</h1>
      <p class="text-lg text-gray-300 mb-8 text-center">We usually reply within one business day.</p>
      {error && (
        <div class="mb-6 p-4 bg-red-500/10 border border-red-500/30 text-red-400 rounded">Something went wrong. Please try again.</div>
      )}
      <form method="POST" action="/api/contact" class="space-y-6">
        <input type="text" name="company_website" class="hidden" tabindex="-1" autocomplete="off" />
        <div>
          <label for="name" class="block text-sm font-medium text-gray-200 mb-1">Name *</label>
          <input id="name" name="name" required class="w-full px-4 py-3 rounded bg-gray-800 border border-gray-700 text-white" />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-200 mb-1">Email *</label>
          <input id="email" type="email" name="email" required class="w-full px-4 py-3 rounded bg-gray-800 border border-gray-700 text-white" />
        </div>
        <div>
          <label for="phone" class="block text-sm font-medium text-gray-200 mb-1">Phone</label>
          <input id="phone" type="tel" name="phone" class="w-full px-4 py-3 rounded bg-gray-800 border border-gray-700 text-white" />
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-gray-200 mb-1">How can we help? *</label>
          <textarea id="message" name="message" required rows="5" class="w-full px-4 py-3 rounded bg-gray-800 border border-gray-700 text-white"></textarea>
        </div>
        <button type="submit" class="w-full bg-warning-400 hover:bg-warning-300 text-black font-bold py-4 px-6 rounded transition-colors">Book My Free Consult</button>
      </form>
    </div>
  </section>
</BaseLayout>
