---
import BaseLayout from '../layouts/BaseLayout.astro';
import AdvancedSEOHead from '../components/SEO/AdvancedSEOHead.astro';
import { BUSINESS } from '../data/constants';
import CTASection from '../components/CTASection.astro';

const seoProps = {
  title: 'About The KPS Group | Small Business Support',
  description: 'Who we are and how our team helps small businesses run better.',
  keywords: [
    'about KPS Group', 'professional holding company', 'The Modern Suite', 'small business solutions',
    'integrated business services', 'business empowerment', 'small business consulting', 'Austin Texas',
    'business operations', 'technology consulting', 'financial services', 'HR solutions',
    'QuickBooks consulting', 'payroll services', 'digital transformation', 'business strategy'
  ],
  serviceSchema: {
    name: 'The KPS Group - Professional Holding Company',
    description: 'Professional holding company providing comprehensive business solutions through The Modern Suite',
    provider: 'The KPS Group',
    areaServed: ['United States', 'Texas', 'Austin', 'Dallas', 'Houston'],
    serviceType: 'Professional Business Services',
    priceRange: '$$'
  },
  businessSchema: {
    name: 'The KPS Group',
    description: 'Professional holding company empowering small businesses through The Modern Suite with integrated solutions',
    url: 'https://thekpsgroup.com/about',
    telephone: '+1-469-534-3392',
    email: 'sales@thekpsgroup.com',
    address: {
      streetAddress: '',
      addressLocality: 'Austin',
      addressRegion: 'TX',
      postalCode: '',
      addressCountry: 'US'
    },
    services: [
      'Professional Holding Company Services',
      'Integrated Business Solutions',
      'Small Business Consulting',
      'Technology & Operations Support',
      'Financial & HR Services',
      'Strategic Business Planning'
    ],
    priceRange: '$$',
    openingHours: ['Mo-Fr 08:00-18:00']
  },
  breadcrumbs: [
    { name: 'Home', url: '/' },
    { name: 'About', url: '/about' }
  ],
  faqSchema: [
    {
      question: 'What is The KPS Group?',
      answer: 'The KPS Group is a professional holding company that brings together six specialized companies under The Modern Suite, providing small businesses with enterprise-level capabilities and integrated solutions for sustainable growth.'
    },
    {
      question: 'What is The Modern Suite?',
      answer: 'The Modern Suite is our integrated approach to business solutions, combining six specialized companies that work together to provide comprehensive support for operations, technology, finance, branding, consulting, and HR needs.'
    },
    {
      question: 'How does The KPS Group help small businesses?',
      answer: 'We help small businesses by providing enterprise-level solutions typically only available to large corporations. Through The Modern Suite, we offer integrated services that work together to streamline operations, enhance technology, ensure compliance, and drive sustainable growth.'
    }
  ]
};
---

<BaseLayout>
  <AdvancedSEOHead {...seoProps} slot="head" />
  
  <!-- Hero Section -->
  <section class="py-20 sm:py-32 px-6 bg-gradient-to-b from-black to-gray-950">
    <div class="max-w-6xl mx-auto text-center">
      <div class="inline-flex items-center gap-3 bg-white/10 backdrop-blur-sm border border-warning-400/30 rounded-full px-6 py-3 mb-8">
        <div class="w-2 h-2 bg-gold rounded-full animate-pulse"></div>
        <span class="text-sm font-medium text-warning-400 tracking-wide uppercase">About The KPS Group</span>
        <div class="w-2 h-2 bg-gold rounded-full animate-pulse"></div>
      </div>

      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-8 leading-tight">
        Professional Holding Company<br/>
        <span class="text-gradient-gold">Empowering Small Business Success</span>
      </h1>
      
      <p class="text-xl sm:text-2xl text-white/80 leading-relaxed max-w-4xl mx-auto mb-12">
        The KPS Group brings together six specialized companies under The Modern Suite, providing small businesses with enterprise-level capabilities and integrated solutions for sustainable growth.
      </p>

      <!-- Stats -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-xl p-6">
          <div class="text-4xl font-bold text-gradient-gold mb-2">2020</div>
          <div class="text-white/70">Founded</div>
        </div>
        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-xl p-6">
          <div class="text-4xl font-bold text-gradient-gold mb-2">6</div>
          <div class="text-white/70">Specialized Companies</div>
        </div>
        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-xl p-6">
          <div class="text-4xl font-bold text-gradient-gold mb-2">1000+</div>
          <div class="text-white/70">Businesses Served</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Story Section -->
  <section class="py-20 px-6 bg-gray-950">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        
        <div>
          <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
            Our Story
          </h2>
          <div class="space-y-6 text-white/80 leading-relaxed">
            <p>
              The KPS Group was founded with a simple but powerful vision: small businesses deserve access to the same sophisticated systems and support that large enterprises enjoy, but without the complexity and cost barriers.
            </p>
            <p>
              After years of working with businesses across various industries, our founder Karson Lawrence recognized a critical gap in the market. Small business owners were brilliant at their craft but often struggled with the operational infrastructure needed to scale efficiently.
            </p>
            <p>
              Rather than offering piecemeal solutions, we decided to create something unprecedented: The Modern Suite - a collection of six specialized companies that work together seamlessly to provide comprehensive business empowerment.
            </p>
          </div>
        </div>

        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-warning-400 mb-6">Our Mission</h3>
          <blockquote class="text-lg text-white/90 italic leading-relaxed mb-6">
            "{BUSINESS.mission}"
          </blockquote>
          <cite class="text-warning-400 font-medium">â€” {BUSINESS.founder}</cite>
        </div>

      </div>
    </div>
  </section>

  <!-- Core Values Section -->
  <section class="py-20 px-6 bg-gradient-to-b from-gray-950 to-black">
    <div class="max-w-6xl mx-auto">
      
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
          Our Core Values
        </h2>
        <p class="text-xl text-white/80 max-w-3xl mx-auto">
          These principles guide every decision we make and every solution we provide through The Modern Suite.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-xl p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-warning-400/20 to-warning-300/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Excellence</h3>
          <p class="text-white/70">
            We deliver enterprise-quality solutions with meticulous attention to detail and professional standards.
          </p>
        </div>

        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-xl p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-warning-400/20 to-warning-300/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Partnership</h3>
          <p class="text-white/70">
            We invest in long-term relationships and grow alongside our clients as trusted business partners.
          </p>
        </div>

        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-xl p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-warning-400/20 to-warning-300/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Integration</h3>
          <p class="text-white/70">
            All our solutions work together seamlessly, ensuring every aspect of your business is aligned and optimized.
          </p>
        </div>

        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-xl p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-warning-400/20 to-warning-300/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Innovation</h3>
          <p class="text-white/70">
            We continuously evolve our solutions using the latest technology and proven methodologies.
          </p>
        </div>

        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-xl p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-warning-400/20 to-warning-300/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Transparency</h3>
          <p class="text-white/70">
            Clear communication, honest assessments, and straightforward solutions with no hidden surprises.
          </p>
        </div>

        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-xl p-8 text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-warning-400/20 to-warning-300/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Results</h3>
          <p class="text-white/70">
            We measure our success by your success and focus on delivering measurable business outcomes.
          </p>
        </div>

      </div>
    </div>
  </section>

  <!-- Leadership Section -->
  <section class="py-20 px-6 bg-black">
    <div class="max-w-6xl mx-auto">
      
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
          Leadership Team
        </h2>
        <p class="text-xl text-white/80 max-w-3xl mx-auto">
          Meet the experienced professionals who guide The KPS Group and ensure The Modern Suite delivers exceptional results for every client.
        </p>
      </div>

      <!-- Team Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        
        <!-- CEO -->
        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-xl p-8 text-center">
          <div class="w-24 h-24 mx-auto mb-6 rounded-full overflow-hidden">
            <picture>
              <source srcset="/team/karson/karson.webp" type="image/webp">
              <img src="/team/karson/karson.jpg" alt="Karson Lawrence, CEO" class="w-full h-full object-cover" width="96" height="96" loading="lazy" />
            </picture>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">Karson Lawrence</h3>
          <p class="text-warning-400 font-medium mb-4">Founder & CEO</p>
          <p class="text-white/70 text-sm">
            Visionary leader with extensive experience in business operations, strategic planning, and organizational development.
          </p>
        </div>

        <!-- CRO -->
        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-xl p-8 text-center">
          <div class="w-24 h-24 mx-auto mb-6 rounded-full overflow-hidden">
            <picture>
              <source srcset="/team/brandon/brandon.webp" type="image/webp">
              <img src="/team/brandon/brandon.jpg" alt="Brandon Gibson, CRO" class="w-full h-full object-cover" width="96" height="96" loading="lazy" />
            </picture>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">Brandon Gibson</h3>
          <p class="text-warning-400 font-medium mb-4">Chief Revenue Officer</p>
          <p class="text-white/70 text-sm">
            Revenue optimization expert focused on helping clients achieve sustainable growth and profitability through The Modern Suite.
          </p>
        </div>

        <!-- CAO -->
        <div class="bg-white/5 backdrop-blur-sm border border-warning-400/20 rounded-xl p-8 text-center">
          <div class="w-24 h-24 mx-auto mb-6 rounded-full overflow-hidden">
            <picture>
              <source srcset="/team/allie/CAO-Allie.webp" type="image/webp">
              <img src="/team/allie/CAO-Allie.jpg" alt="Allie Banks, CAO" class="w-full h-full object-cover" width="96" height="96" loading="lazy" />
            </picture>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">Allie Banks</h3>
          <p class="text-warning-400 font-medium mb-4">Chief Administrative Officer</p>
          <p class="text-white/70 text-sm">
            Operations specialist ensuring seamless integration and delivery of all Modern Suite services across client engagements.
          </p>
        </div>

      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 px-6 bg-gradient-to-t from-black to-gray-950">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
        Ready to Experience The Modern Suite?
      </h2>
      <p class="text-xl text-white/80 mb-8">
        Join over 250+ businesses who have transformed their operations with The KPS Group's integrated solutions.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="inline-flex items-center gap-3 bg-gold hover:bg-warning-300 text-black font-semibold px-8 py-4 rounded-lg transition-all duration-300 hover:scale-105">
          <span>Book My Free Consult</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
        </a>
        <a href="/services" class="inline-flex items-center gap-3 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white font-semibold px-8 py-4 rounded-lg border border-white/20 hover:border-warning-400/50 transition-all duration-300">
          <span>Explore The Modern Suite</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <CTASection />

</BaseLayout>

<style>
.text-gradient-gold {
  background: linear-gradient(135deg, #f8d673 0%, #fce7b3 50%, #f8d673 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}
</style>
