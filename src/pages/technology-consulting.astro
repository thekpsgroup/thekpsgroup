---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BUSINESS } from '../data/constants';

const pageTitle = 'Technology Consultant Near Me | IT Consulting Services | Business Technology Solutions';
const pageDescription = 'Expert technology consulting for small businesses. IT strategy, digital transformation, cloud solutions, cybersecurity, and custom software development. Nationwide IT consulting services. Call 469-534-3392.';

const keywords = [
  'technology consultant near me',
  'IT consultant near me',
  'business technology consultant',
  'small business IT consultant',
  'technology consulting services',
  'IT consulting services',
  'digital transformation consultant',
  'cloud consultant',
  'cybersecurity consultant',
  'software development consultant',
  'IT strategy consultant',
  'business IT solutions',
  'technology advisory services',
  'IT modernization',
  'digital strategy consultant',
  'technology consultant Austin TX',
  'technology consultant Dallas TX',
  'technology consultant Houston TX',
  'nationwide IT consulting',
  'remote IT consulting'
];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Technology Consulting Services",
  "description": pageDescription,
  "provider": {
    "@type": "Organization",
    "name": "The KPS Group LLC",
    "url": "https://thekpsgroup.com",
    "telephone": "469-534-3392"
  },
  "areaServed": "United States",
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Technology Consulting Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "IT Strategy Consulting"
        }
      },
      {
        "@type": "Offer", 
        "itemOffered": {
          "@type": "Service",
          "name": "Digital Transformation"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service", 
          "name": "Cloud Solutions"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Cybersecurity Consulting"
        }
      }
    ]
  }
};
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  keywords={keywords}
  canonical="https://thekpsgroup.com/technology-consulting"
  isServicePage={true}
  serviceName="Technology Consulting"
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>

  <!-- Hero Section -->
  <section class="relative py-20 sm:py-24 lg:py-32 bg-gradient-to-b from-black to-gray-950">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-3 bg-white/10 backdrop-blur-sm border border-accent-600/30 rounded-full px-6 py-3 mb-8">
          <div class="w-2 h-2 bg-accent-500 rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-accent-400 tracking-wide uppercase">Technology Consulting</span>
          <div class="w-2 h-2 bg-accent-500 rounded-full animate-pulse"></div>
        </div>
        
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-8 leading-tight">
          Expert <span class="text-gradient-accent">Technology Consulting</span><br/>
          <span class="text-2xl sm:text-3xl lg:text-4xl font-normal text-white/80">Transform Your Business with IT</span>
        </h1>
        
        <p class="text-xl sm:text-2xl text-white/80 leading-relaxed mb-12">
          Strategic technology consulting to modernize your business, improve efficiency, and drive growth through digital transformation.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
          <a href="/contact" class="btn-primary text-lg px-8 py-4">
            Get Tech Assessment
          </a>
          <a href="tel:4695343392" class="btn-secondary text-lg px-8 py-4">
            Call (469) 534-3392
          </a>
        </div>

        <!-- Trust Indicators -->
        <div class="flex flex-wrap justify-center gap-8 text-sm text-white/60">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>Certified IT Professionals</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>Nationwide Service</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>24/7 Support Available</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-20 bg-gray-950">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">Complete Technology Solutions</h2>
        <p class="text-xl text-white/80 max-w-3xl mx-auto">From IT strategy to implementation, we help businesses leverage technology for competitive advantage and operational excellence.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- IT Strategy -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">IT Strategy & Planning</h3>
          <p class="text-white/70 mb-6">Comprehensive technology roadmaps aligned with your business goals and growth objectives.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• Technology assessment & audit</li>
            <li>• IT roadmap development</li>
            <li>• Budget planning & ROI analysis</li>
            <li>• Vendor selection & management</li>
            <li>• Digital transformation strategy</li>
          </ul>
        </div>

        <!-- Cloud Solutions -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Cloud Solutions</h3>
          <p class="text-white/70 mb-6">Secure, scalable cloud infrastructure and migration services for modern businesses.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• Cloud migration & deployment</li>
            <li>• AWS, Azure, Google Cloud</li>
            <li>• Hybrid cloud architecture</li>
            <li>• Cloud security & compliance</li>
            <li>• Backup & disaster recovery</li>
          </ul>
        </div>

        <!-- Cybersecurity -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Cybersecurity</h3>
          <p class="text-white/70 mb-6">Comprehensive security solutions to protect your business from cyber threats.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• Security assessments & audits</li>
            <li>• Network security implementation</li>
            <li>• Endpoint protection</li>
            <li>• Security training & awareness</li>
            <li>• Incident response planning</li>
          </ul>
        </div>

        <!-- Software Development -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Custom Software Development</h3>
          <p class="text-white/70 mb-6">Tailored software solutions to automate processes and improve efficiency.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• Custom web applications</li>
            <li>• Business process automation</li>
            <li>• API development & integration</li>
            <li>• Database design & optimization</li>
            <li>• Legacy system modernization</li>
          </ul>
        </div>

        <!-- IT Infrastructure -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">IT Infrastructure</h3>
          <p class="text-white/70 mb-6">Reliable, scalable infrastructure to support your business operations.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• Network design & implementation</li>
            <li>• Server virtualization</li>
            <li>• Storage solutions</li>
            <li>• Performance monitoring</li>
            <li>• Capacity planning</li>
          </ul>
        </div>

        <!-- Digital Transformation -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Digital Transformation</h3>
          <p class="text-white/70 mb-6">End-to-end digital transformation to modernize your entire business.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• Process digitization</li>
            <li>• Workflow automation</li>
            <li>• Digital customer experiences</li>
            <li>• Data analytics & insights</li>
            <li>• Change management</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Industries We Serve -->
  <section class="py-20 bg-black">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-12">Industries We Serve</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
          <div class="text-center">
            <div class="text-accent-400 mb-4">
              <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-white mb-2">Construction</h3>
            <p class="text-white/60 text-sm">Field service management, project tracking, mobile solutions</p>
          </div>
          <div class="text-center">
            <div class="text-accent-400 mb-4">
              <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-white mb-2">HVAC</h3>
            <p class="text-white/60 text-sm">Service scheduling, inventory management, customer portals</p>
          </div>
          <div class="text-center">
            <div class="text-accent-400 mb-4">
              <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-white mb-2">Electrical</h3>
            <p class="text-white/60 text-sm">Code compliance tracking, safety management, digital inspections</p>
          </div>
          <div class="text-center">
            <div class="text-accent-400 mb-4">
              <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-white mb-2">Professional Services</h3>
            <p class="text-white/60 text-sm">Client management, billing automation, document workflows</p>
          </div>
        </div>

        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-white mb-4">Ready to Transform Your Technology?</h3>
          <p class="text-white/80 mb-6">Get a comprehensive technology assessment and discover how we can modernize your business operations.</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="btn-primary">
              Schedule Tech Assessment
            </a>
            <a href="tel:4695343392" class="btn-secondary">
              Call Now: (469) 534-3392
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
.text-gradient-accent {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 50%, #1d4ed8 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.btn-primary {
  @apply inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-accent-600 to-accent-500 text-white font-semibold rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2 focus:ring-offset-black;
}

.btn-secondary {
  @apply inline-flex items-center justify-center px-6 py-3 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white font-semibold rounded-lg border border-white/20 hover:border-accent-500/50 transition-all duration-300 hover:scale-105;
}
</style>
