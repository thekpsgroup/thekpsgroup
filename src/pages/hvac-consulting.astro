---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BUSINESS } from '../data/constants';

const pageTitle = 'HVAC Consultant Near Me | HVAC Business Consulting | Field Service Consulting';
const pageDescription = 'Expert HVAC business consulting services. Service management, field operations, HVAC software implementation, business growth strategies, and operational excellence for HVAC contractors. Call 469-534-3392.';

const keywords = [
  'HVAC consultant near me',
  'HVAC business consultant',
  'HVAC consulting services',
  'HVAC contractor consultant',
  'field service consultant HVAC',
  'HVAC operations consultant',
  'HVAC business advisor',
  'HVAC management consulting',
  'HVAC software consultant',
  'heating and cooling consultant',
  'air conditioning consultant',
  'HVAC service consultant',
  'HVAC efficiency consultant',
  'HVAC business optimization',
  'HVAC workflow consultant',
  'HVAC consultant Austin TX',
  'HVAC consultant Dallas TX',
  'HVAC consultant Houston TX',
  'nationwide HVAC consulting',
  'remote HVAC consulting'
];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "HVAC Business Consulting Services",
  "description": pageDescription,
  "provider": {
    "@type": "Organization",
    "name": "The KPS Group LLC",
    "url": "https://thekpsgroup.com",
    "telephone": "469-534-3392"
  },
  "areaServed": "United States",
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "HVAC Consulting Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "HVAC Operations Optimization"
        }
      },
      {
        "@type": "Offer", 
        "itemOffered": {
          "@type": "Service",
          "name": "Field Service Management"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service", 
          "name": "HVAC Software Implementation"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "HVAC Business Growth Strategy"
        }
      }
    ]
  }
};
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  keywords={keywords}
  canonical="https://thekpsgroup.com/hvac-consulting"
  isServicePage={true}
  serviceName="HVAC Consulting"
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>

  <!-- Hero Section -->
  <section class="relative py-20 sm:py-24 lg:py-32 bg-gradient-to-b from-black to-gray-950">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-3 bg-white/10 backdrop-blur-sm border border-accent-600/30 rounded-full px-6 py-3 mb-8">
          <div class="w-2 h-2 bg-accent-500 rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-accent-400 tracking-wide uppercase">HVAC Consulting</span>
          <div class="w-2 h-2 bg-accent-500 rounded-full animate-pulse"></div>
        </div>
        
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-8 leading-tight">
          Expert <span class="text-gradient-accent">HVAC Business</span><br/>
          <span class="text-2xl sm:text-3xl lg:text-4xl font-normal text-white/80">Consulting Services</span>
        </h1>
        
        <p class="text-xl sm:text-2xl text-white/80 leading-relaxed mb-12">
          Optimize your HVAC business operations, improve service delivery, and grow your revenue with proven consulting strategies.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
          <a href="mailto:sales@thekpsgroup.com?subject=HVAC Consulting Inquiry&body=Hello, I need help optimizing my HVAC business operations." class="btn-primary text-lg px-8 py-4">
            Get Operations Assessment
          </a>
          <a href="tel:4695343392" class="btn-secondary text-lg px-8 py-4">
            Call (469) 534-3392
          </a>
        </div>

        <!-- Trust Indicators -->
        <div class="flex flex-wrap justify-center gap-8 text-sm text-white/60">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>HVAC Industry Experts</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>Field Service Specialists</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>Proven Results</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-20 bg-gray-950">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">Complete HVAC Business Solutions</h2>
        <p class="text-xl text-white/80 max-w-3xl mx-auto">From operations optimization to growth strategies, we help HVAC contractors build more efficient and profitable businesses.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Operations Optimization -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Operations Optimization</h3>
          <p class="text-white/70 mb-6">Streamline your HVAC operations for maximum efficiency and customer satisfaction.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• Service workflow optimization</li>
            <li>• Technician scheduling & routing</li>
            <li>• Inventory management systems</li>
            <li>• Quality control processes</li>
            <li>• Performance metrics & KPIs</li>
          </ul>
        </div>

        <!-- Field Service Management -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Field Service Management</h3>
          <p class="text-white/70 mb-6">Optimize your field operations with modern service management strategies.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• Mobile workforce optimization</li>
            <li>• Service call prioritization</li>
            <li>• Emergency response protocols</li>
            <li>• Customer communication systems</li>
            <li>• Service agreement management</li>
          </ul>
        </div>

        <!-- HVAC Software -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2H9a2 2 0 00-2 2v10z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">HVAC Software Solutions</h3>
          <p class="text-white/70 mb-6">Implement and optimize software systems specifically designed for HVAC businesses.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• ServiceTitan optimization</li>
            <li>• Housecall Pro setup</li>
            <li>• FieldEdge implementation</li>
            <li>• Custom software solutions</li>
            <li>• System integration & training</li>
          </ul>
        </div>

        <!-- Business Growth -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Business Growth Strategy</h3>
          <p class="text-white/70 mb-6">Develop strategies to scale your HVAC business and increase profitability.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• Market analysis & positioning</li>
            <li>• Revenue optimization strategies</li>
            <li>• Customer retention programs</li>
            <li>• Digital marketing for HVAC</li>
            <li>• Expansion planning</li>
          </ul>
        </div>

        <!-- Energy Efficiency -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Energy Efficiency Consulting</h3>
          <p class="text-white/70 mb-6">Help customers reduce energy costs while growing your service offerings.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• Energy audit services</li>
            <li>• Smart thermostat integration</li>
            <li>• High-efficiency system sales</li>
            <li>• Rebate program management</li>
            <li>• Green technology adoption</li>
          </ul>
        </div>

        <!-- Customer Experience -->
        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8 hover:bg-white/10 transition-all duration-300">
          <div class="text-accent-400 mb-6">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Customer Experience</h3>
          <p class="text-white/70 mb-6">Enhance customer satisfaction and build loyalty through improved service delivery.</p>
          <ul class="text-sm text-white/60 space-y-2">
            <li>• Customer journey mapping</li>
            <li>• Service quality standards</li>
            <li>• Communication protocols</li>
            <li>• Feedback systems</li>
            <li>• Loyalty program development</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- HVAC Specializations -->
  <section class="py-20 bg-black">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-12">HVAC Service Specializations</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          <div class="text-center">
            <div class="text-accent-400 mb-4">
              <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-white mb-2">Residential HVAC</h3>
            <p class="text-white/60 text-sm">Home comfort solutions, maintenance programs, emergency services</p>
          </div>
          <div class="text-center">
            <div class="text-accent-400 mb-4">
              <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-white mb-2">Commercial HVAC</h3>
            <p class="text-white/60 text-sm">Building automation, energy management, preventive maintenance</p>
          </div>
          <div class="text-center">
            <div class="text-accent-400 mb-4">
              <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-white mb-2">Industrial HVAC</h3>
            <p class="text-white/60 text-sm">Process cooling, clean rooms, specialized ventilation systems</p>
          </div>
        </div>

        <div class="bg-white/5 backdrop-blur-sm border border-accent-600/20 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-white mb-4">Ready to Optimize Your HVAC Business?</h3>
          <p class="text-white/80 mb-6">Get a comprehensive operations assessment and discover how we can help you improve efficiency, increase profits, and grow your business.</p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="mailto:sales@thekpsgroup.com?subject=HVAC Business Assessment&body=Hello, I'd like to schedule an operations assessment for my HVAC business." class="btn-primary">
              Schedule Assessment
            </a>
            <a href="tel:4695343392" class="btn-secondary">
              Call Now: (469) 534-3392
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
.text-gradient-accent {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 50%, #1d4ed8 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.btn-primary {
  @apply inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-accent-600 to-accent-500 text-white font-semibold rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:ring-offset-2 focus:ring-offset-black;
}

.btn-secondary {
  @apply inline-flex items-center justify-center px-6 py-3 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white font-semibold rounded-lg border border-white/20 hover:border-accent-500/50 transition-all duration-300 hover:scale-105;
}
</style>
