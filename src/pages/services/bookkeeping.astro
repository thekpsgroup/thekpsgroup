---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
// import PricingCard from '../../components/PricingCard.astro';
import StructuredData from '../../components/StructuredData.astro';
import { BUSINESS } from '../../data/constants';

const title = 'Professional Bookkeeping Services | The KPS Group';
const description = 'Expert bookkeeping, tax preparation, and financial statement services for small businesses nationwide. Modern Books division of The KPS Group.';
const keywords = ['bookkeeping services', 'professional bookkeeping', 'tax preparation', 'financial statements', 'accounting services', 'small business bookkeeping', 'Modern Books'];

const heroData = {
  title: 'Professional Bookkeeping Services',
  subtitle: 'Modern Books Division',
  description: 'Accurate, timely bookkeeping and accounting services that keep your finances organized and your business compliant.',
  ctaText: 'Book My Free Consult',
  ctaUrl: '/contact',
  backgroundImage: '/img/ui/hero-bg.svg'
};

const bookkeepingServices = [
  {
    title: 'Monthly Bookkeeping',
    description: 'Complete monthly bookkeeping including transaction categorization, bank reconciliations, and financial reports.',
    features: ['Bank Reconciliation', 'Transaction Categorization', 'Monthly Reporting', 'A/R & A/P Management'],
    price: 'Starting at $400/month'
  },
  {
    title: 'Tax Preparation',
    description: 'Professional tax preparation for businesses and individuals with year-round tax planning support.',
    features: ['Business Tax Returns', 'Individual Tax Returns', 'Tax Planning', 'IRS Representation'],
    price: 'Starting at $500'
  },
  {
    title: 'Financial Statements',
    description: 'Professional financial statements including P&L, balance sheet, and cash flow statements.',
    features: ['P&L Statements', 'Balance Sheets', 'Cash Flow Reports', 'Financial Analysis'],
    price: 'Starting at $300/month'
  }
];

const structuredDataProps = {
  type: 'Service',
  name: 'Professional Bookkeeping Services',
  description: description,
  provider: BUSINESS.name,
  areaServed: 'United States',
  serviceType: heroData.title
};
---

<BaseLayout 
  title={title} 
  description={description} 
  keywords={keywords}
  service="Bookkeeping"
>
  <!-- Hero Section -->
  <Hero 
    title={heroData.title}
    subtitle={heroData.subtitle}
    description={heroData.description}
    ctaText={heroData.ctaText}
    ctaUrl={heroData.ctaUrl}
    backgroundImage={heroData.backgroundImage}
  />

  <!-- Services Overview -->
  <section class="py-20 px-6 max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-3 glass-card px-6 py-3 mb-8">
        <div class="w-2 h-2 bg-gold rounded-full animate-pulse"></div>
        <span class="text-sm font-medium text-gold/90 tracking-wide uppercase">Modern Books</span>
        <div class="w-2 h-2 bg-gold rounded-full animate-pulse"></div>
      </div>
      
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-8 leading-tight">
        Bookkeeping That Brings
        <span class="text-gradient-gold block">Clarity & Confidence</span>
      </h2>
      
      <p class="text-xl text-white/80 max-w-4xl mx-auto leading-relaxed">
        Professional bookkeeping services that give you clear visibility into your 
        financial performance while ensuring compliance and accuracy.
      </p>
    </div>

    <!-- Bookkeeping Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {bookkeepingServices.map((service) => (
        <div class="glass-card p-8 rounded-2xl border border-gold/20 hover:border-gold/40 transition-all duration-300">
          <h3 class="text-2xl font-bold text-white mb-4">{service.title}</h3>
          <p class="text-white/80 mb-6 leading-relaxed">{service.description}</p>
          
          <ul class="space-y-3 mb-8">
            {service.features.map((feature) => (
              <li class="flex items-center gap-3 text-white/90">
                <svg class="w-5 h-5 text-gold flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>{feature}</span>
              </li>
            ))}
          </ul>
          
          <div class="text-gold font-semibold text-lg mb-4">{service.price}</div>
          
          <a
            href="/contact"
            class="inline-flex items-center justify-center w-full px-6 py-3 bg-gold text-black font-semibold rounded-lg hover:bg-gold-light transition-colors duration-300"
          >
            Book My Free Consult
          </a>
        </div>
      ))}
    </div>
  </section>

  <!-- Why Choose Modern Books -->
  <section class="py-20 px-6 bg-gray-900/50">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-8 leading-tight">
            Why Businesses Trust
            <span class="text-gradient-gold block">Modern Books</span>
          </h2>
          
          <div class="space-y-6">
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-gold/20 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-gold" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-white mb-2">Certified Professionals</h3>
                <p class="text-white/80">Our team includes certified bookkeepers and CPAs with expertise in small business accounting.</p>
              </div>
            </div>
            
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-gold/20 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-gold" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-white mb-2">Monthly Financial Reports</h3>
                <p class="text-white/80">Detailed monthly reports that give you clear insight into your financial performance and cash flow.</p>
              </div>
            </div>
            
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-gold/20 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-gold" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-white mb-2">Tax-Ready Records</h3>
              <p class="text-white/80">Your books are always organized and ready for tax season, saving you time and reducing stress.</p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="glass-card p-8 rounded-2xl">
        <div class="text-center mb-8">
          <h3 class="text-2xl font-bold text-white mb-4">Ready for Better Bookkeeping?</h3>
          <p class="text-white/80 mb-6">
            Let's get your books organized and your finances on track with professional bookkeeping services.
          </p>
        </div>
        
        <div class="space-y-4">
          <a
            href="/contact"
            class="block w-full text-center px-6 py-3 bg-gold text-black font-semibold rounded-lg hover:bg-gold-light transition-colors duration-300"
          >
            Book My Free Consult
          </a>
          <a 
            href={`tel:${BUSINESS.phone}`}
            class="block w-full text-center px-6 py-3 border border-gold text-gold font-semibold rounded-lg hover:bg-gold/10 transition-colors duration-300"
          >
            Call {BUSINESS.phone}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Overview -->
  <section class="py-20 px-6 max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-8">
        Our Proven
        <span class="text-gradient-gold block">Bookkeeping Process</span>
      </h2>
      <p class="text-xl text-white/80 max-w-4xl mx-auto">
        A systematic approach that ensures accuracy, compliance, and clear financial reporting.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {[
        {
          step: '01',
          title: 'Setup & Discovery',
          description: 'We analyze your current bookkeeping situation and set up proper systems and procedures.'
        },
        {
          step: '02',
          title: 'Monthly Processing',
          description: 'Regular transaction categorization, bank reconciliation, and account maintenance.'
        },
        {
          step: '03',
          title: 'Reporting & Review',
          description: 'Monthly financial reports with analysis and recommendations for improvement.'
        },
        {
          step: '04',
          title: 'Tax Preparation',
          description: 'Year-end preparation and professional tax filing with ongoing planning support.'
        }
      ].map((step) => (
        <div class="text-center">
          <div class="w-16 h-16 bg-gold/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-2xl font-bold text-gold">{step.step}</span>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">{step.title}</h3>
          <p class="text-white/80">{step.description}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Structured Data -->
  <StructuredData {...structuredDataProps} />
</BaseLayout>
