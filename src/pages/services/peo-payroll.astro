---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { BUSINESS } from '../../data/constants';

const pageTitle = 'PEO Payroll Services | Nationwide HR Compliance | The KPS Group';
const pageDescription = 'Professional PEO services, payroll processing, HR compliance & benefits administration. Call 469-458-6966. Serving small businesses nationwide through Modern Pay.';
const pageKeywords = [
  'PEO services',
  'payroll processing',
  'HR compliance',
  'employee benefits',
  'workers compensation',
  'payroll tax compliance',
  'Modern Pay',
  'PEO for contractors',
  'payroll for trades',
  'HR outsourcing',
  'employee handbook',
  'benefits administration',
  'payroll services nationwide',
  'small business HR'
];
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  isServicePage={true}
  serviceName="PEO Payroll Services"
  pageType="Service"
>
  <!-- Hero Section -->
  <section class="relative py-24 lg:py-32 bg-gradient-to-b from-black to-gray-950">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-3 glass-card px-6 py-3 mb-8">
          <div class="w-2 h-2 bg-gold rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-gold/90 tracking-wide uppercase">Modern Pay PEO</span>
          <div class="w-2 h-2 bg-gold rounded-full animate-pulse"></div>
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gradient-gold mb-8 leading-tight">
          Enterprise-Grade Payroll<br/>& HR for Growing Businesses
        </h1>
        
        <p class="text-xl md:text-2xl text-white/80 max-w-4xl mx-auto leading-relaxed mb-12">
          Through Modern Pay, we deliver comprehensive PEO services that give small businesses access to Fortune 500-level benefits, HR compliance, and payroll processing.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
          <a href="/contact" class="btn-primary">
            <span>Book My Free Consult</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
          <a href={BUSINESS.phoneHref} class="btn-secondary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span>Call {BUSINESS.phone}</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Core PEO Services -->
  <section class="py-24 bg-gray-950">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gradient-gold mb-6">Complete PEO Services</h2>
        <p class="text-xl text-white/70 max-w-3xl mx-auto">Everything you need to manage employees with confidence and compliance.</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="card-premium hover-lift group">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-gold/20 to-gold/10 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-gradient-gold transition-all duration-300">Full-Service Payroll</h3>
          <p class="text-white/70 leading-relaxed">Complete payroll processing with tax compliance, direct deposits, pay stubs, and year-end reporting across all 50 states.</p>
        </div>

        <div class="card-premium hover-lift group">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-gold/20 to-gold/10 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-gradient-gold transition-all duration-300">HR Compliance</h3>
          <p class="text-white/70 leading-relaxed">Stay compliant with federal, state, and local employment laws. Includes employee handbooks, policy development, and regulatory updates.</p>
        </div>

        <div class="card-premium hover-lift group">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-gold/20 to-gold/10 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-gradient-gold transition-all duration-300">Employee Benefits</h3>
          <p class="text-white/70 leading-relaxed">Fortune 500-level health insurance, dental, vision, 401(k), and supplemental benefits at group rates your employees will love.</p>
        </div>

        <div class="card-premium hover-lift group">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-gold/20 to-gold/10 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-gradient-gold transition-all duration-300">Workers Compensation</h3>
          <p class="text-white/70 leading-relaxed">Comprehensive workers' comp coverage with claims management, safety programs, and experience modification factor optimization.</p>
        </div>

        <div class="card-premium hover-lift group">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-gold/20 to-gold/10 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16l2.879-2.879m0 0a3 3 0 104.243-4.242 3 3 0 00-4.243 4.242zM21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-gradient-gold transition-all duration-300">Risk Management</h3>
          <p class="text-white/70 leading-relaxed">Employment practices liability, discrimination prevention, workplace safety consulting, and documentation management.</p>
        </div>

        <div class="card-premium hover-lift group">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-gold/20 to-gold/10 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3 group-hover:text-gradient-gold transition-all duration-300">Employee Support</h3>
          <p class="text-white/70 leading-relaxed">Dedicated HR helpline, employee onboarding, performance management, and termination support with proper documentation.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Modern Pay -->
  <section class="py-24 bg-black">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gradient-gold mb-6">Why Choose Modern Pay?</h2>
        <p class="text-xl text-white/70 max-w-3xl mx-auto">More than payroll. A complete employment solution.</p>
      </div>

      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="space-y-8">
          <div class="flex items-start gap-6">
            <div class="w-12 h-12 rounded-full bg-gold/20 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-white mb-3">Immediate Cost Savings</h3>
              <p class="text-white/70">Save 20-40% on employee benefits through our group buying power while reducing HR administrative overhead.</p>
            </div>
          </div>

          <div class="flex items-start gap-6">
            <div class="w-12 h-12 rounded-full bg-gold/20 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-white mb-3">Risk Protection</h3>
              <p class="text-white/70">Reduce employment-related liability through proper compliance, documentation, and our employment practices insurance.</p>
            </div>
          </div>

          <div class="flex items-start gap-6">
            <div class="w-12 h-12 rounded-full bg-gold/20 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-white mb-3">Focus on Growth</h3>
              <p class="text-white/70">Stop managing HR headaches and focus on what you do best—growing your business and serving customers.</p>
            </div>
          </div>

          <div class="flex items-start gap-6">
            <div class="w-12 h-12 rounded-full bg-gold/20 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-white mb-3">Employee Attraction & Retention</h3>
              <p class="text-white/70">Compete for top talent with enterprise-level benefits packages typically available only to large corporations.</p>
            </div>
          </div>
        </div>

        <div class="glass-card p-12">
          <h3 class="text-2xl font-bold text-gradient-gold mb-8 text-center">Perfect for Service Businesses</h3>
          <div class="space-y-6">
            <div class="flex items-center gap-4">
              <div class="w-3 h-3 bg-gold rounded-full"></div>
              <span class="text-white">HVAC Contractors (5-50 employees)</span>
            </div>
            <div class="flex items-center gap-4">
              <div class="w-3 h-3 bg-gold rounded-full"></div>
              <span class="text-white">Plumbing Companies (3-25 employees)</span>
            </div>
            <div class="flex items-center gap-4">
              <div class="w-3 h-3 bg-gold rounded-full"></div>
              <span class="text-white">Electrical Contractors (5-40 employees)</span>
            </div>
            <div class="flex items-center gap-4">
              <div class="w-3 h-3 bg-gold rounded-full"></div>
              <span class="text-white">General Contractors (10-75 employees)</span>
            </div>
            <div class="flex items-center gap-4">
              <div class="w-3 h-3 bg-gold rounded-full"></div>
              <span class="text-white">Professional Services (5-30 employees)</span>
            </div>
            <div class="flex items-center gap-4">
              <div class="w-3 h-3 bg-gold rounded-full"></div>
              <span class="text-white">Home Services (3-20 employees)</span>
            </div>
          </div>
          
          <div class="mt-8 p-6 bg-gold/5 rounded-xl border border-gold/20">
            <div class="text-center">
              <div class="text-2xl font-bold text-gold mb-2">$2,500+</div>
              <div class="text-white/80 text-sm">Average annual savings per employee</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-24 bg-gradient-to-r from-gold/10 to-gold/5">
    <div class="container mx-auto px-6 text-center">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-gradient-gold mb-8">
          Ready to Upgrade Your Payroll & HR?
        </h2>
        <p class="text-xl text-white/80 mb-12 leading-relaxed">
          Call <strong>{BUSINESS.phone}</strong> or email <a href={`mailto:${BUSINESS.email}`} class="text-gold hover:text-gold-light underline">{BUSINESS.email}</a> for a free payroll analysis. We'll show you exactly how much you can save while improving your employee benefits.
        </p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a href="/contact" class="btn-primary">
            <span>Book My Free Consult</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </a>
  <a href="/" class="btn-secondary">
            <span>Explore All Services</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <script type="application/ld+json">
    {JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Service',
      serviceType: 'PEO Payroll Services',
      provider: { '@type': 'Organization', name: 'The KPS Group LLC', url: 'https://thekpsgroup.com' },
      areaServed: 'United States'
    })}
  </script>
</BaseLayout>

