    name: 'Professional HR Services',
    description: 'Comprehensive human resources consulting including compliance, benefits, training, and strategic HR management',
    provider: 'The KPS Group',
    areaServed: ['United States', 'Texas', 'Austin', 'Dallas', 'Houston'],
    serviceType: 'Human Resources Consulting',
    priceRange: '$$'
