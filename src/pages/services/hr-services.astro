  businessSchema: {
    name: 'The KPS Group - HR Services',
    description: 'Professional human resources consulting and outsourcing services for small and medium businesses',
    url: 'https://thekpsgroup.com/services/hr-services',
    telephone: '+1-469-534-3392',
    email: 'sales@thekpsgroup.com',
    address: {
      streetAddress: '',
      addressLocality: 'Austin',
      addressRegion: 'TX',
      postalCode: '',
      addressCountry: 'US'
    },
    services: [
      'HR Compliance & Employment Law',
      'Employee Handbook Development',
      'Benefits Administration',
      'Performance Management Systems',
      'Employee Training & Development',
      'Workplace Policy Development'
    ],
    priceRange: '$$',
    openingHours: ['Mo-Fr 08:00-18:00']
