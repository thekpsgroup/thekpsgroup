---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdvancedSEOHead from '../../components/SEO/AdvancedSEOHead.astro';
import { BUSINESS } from '../../data/constants';
import CTASection from '../../components/CTASection.astro';

const seoProps = {
  title: 'Professional Business Services | Complete Solutions for Small Business Success',
  description: 'Comprehensive business services including QuickBooks consulting, payroll management, HR services, and technology consulting. Professional solutions designed for small business growth and success.',
  keywords: [
    'business services', 'small business solutions', 'professional services', 'QuickBooks consulting',
    'payroll services', 'HR services', 'technology consulting', 'business consulting', 'Austin Texas',
    'digital transformation', 'business operations', 'financial services', 'compliance services',
    'small business support', 'integrated solutions', 'The Modern Suite', 'KPS Group services'
  ],
  serviceSchema: {
    name: 'Comprehensive Business Services',
    description: 'Complete suite of professional business services including technology, finance, HR, and operational consulting',
    provider: 'The KPS Group',
    areaServed: ['United States', 'Texas', 'Austin', 'Dallas', 'Houston'],
    serviceType: 'Professional Business Services',
    priceRange: '$$'
  },
  businessSchema: {
    name: 'The KPS Group - Business Services',
    description: 'Professional business services provider offering comprehensive solutions for small and medium businesses',
    url: 'https://thekpsgroup.com/services',
    telephone: '+1-469-458-6966',
    email: 'sales@thekpsgroup.com',
    address: {
      streetAddress: '',
      addressLocality: 'Austin',
      addressRegion: 'TX',
      postalCode: '',
      addressCountry: 'US'
    },
    services: [
      'QuickBooks Consulting & Setup',
      'Professional Payroll Services',
      'HR Services & Compliance',
      'Technology Consulting',
      'Digital Transformation',
      'Business Operations Consulting'
    ],
    priceRange: '$$',
    openingHours: ['Mo-Fr 08:00-18:00']
  },
  breadcrumbs: [
    { name: 'Home', url: '/' },
    { name: 'Services', url: '/services' }
  ],
  faqSchema: [
    {
      question: 'What business services do you offer?',
      answer: 'We offer comprehensive business services including QuickBooks consulting, payroll management, HR services, technology consulting, digital transformation, and business operations consulting through The Modern Suite.'
    },
    {
      question: 'Can you customize services for my specific business needs?',
      answer: 'Yes, all our services are customizable to meet your specific business requirements. We work with you to understand your unique challenges and develop tailored solutions that fit your industry and growth stage.'
    },
    {
      question: 'Do you provide ongoing support after implementation?',
      answer: 'Absolutely! We provide ongoing support, training, and optimization services to ensure your continued success. Our relationship doesn\'t end at implementation - we\'re your long-term business partner.'
    },
    {
      question: 'How do your integrated services work together?',
      answer: 'Our services are designed to work seamlessly together through The Modern Suite. For example, our payroll services integrate with QuickBooks setup, our HR services align with compliance requirements, and our technology solutions support all operational aspects of your business.'
    }
  ]
};
---

<BaseLayout>
  <AdvancedSEOHead {...seoProps} slot="head" />
  
  <!-- Enhanced Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Premium Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-accent-900 via-black to-accent-800"></div>
    
    <!-- Animated Elements -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-warning-400/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-warning-400/10 rounded-full blur-2xl animate-pulse" style="animation-delay: -2s;"></div>
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 container mx-auto px-6 py-20">
      <div class="max-w-6xl mx-auto">
        
        <!-- Professional Badge -->
        <div class="text-center mb-8 animate-fade-in">
          <div class="inline-flex items-center gap-3 bg-warning-400/20 border border-warning-400/40 rounded-full px-6 py-3">
