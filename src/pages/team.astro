---
import BaseLayout from '../layouts/BaseLayout.astro';
import AdvancedSEOHead from '../components/SEO/AdvancedSEOHead.astro';
import { CONTACT } from '../constants/contact';

const seoProps = {
  title: 'Leadership Team | The KPS Group | Meet Our Business Solutions Experts',
  description: 'Meet The KPS Group leadership team: CEO Karson Lawrence, CRO Brandon Gibson, and CAO Allie Banks. Experienced business professionals dedicated to helping small businesses achieve sustainable growth and operational excellence.',
  keywords: [
    'leadership team', 'business solutions experts', 'small business consultants', 'executive team',
    'Karson Lawrence CEO', 'Brandon Gibson CRO', 'Allie Banks CAO', 'business leadership team',
    'business consulting experts', 'Austin business leaders', 'KPS Group executives', 'professional team',
    'business operations experts', 'small business support team', 'certified business advisors'
  ],
  serviceSchema: {
    name: 'Expert Business Leadership Team',
    description: 'Experienced leadership team providing strategic business guidance, operations consulting, and professional support services',
    provider: 'The KPS Group',
    areaServed: ['United States', 'Texas', 'Austin', 'Dallas', 'Houston'],
    serviceType: 'Business Leadership & Consulting',
    priceRange: '$$'
  },
  businessSchema: {
    name: 'The KPS Group Leadership Team',
    description: 'Experienced business leaders dedicated to helping small businesses achieve sustainable growth through professional consulting and support services.',
    url: 'https://thekpsgroup.com/team',
    telephone: CONTACT.phoneE164,
    email: CONTACT.email,
    address: {
      streetAddress: '',
      addressLocality: 'Austin',
      addressRegion: 'TX',
      postalCode: '',
      addressCountry: 'US'
    },
    services: [
      'Business Strategy Leadership',
      'Operations Consulting',
      'Revenue Growth Planning',
      'Administrative Excellence',
      'Client Relationship Management'
    ],
    priceRange: '$$',
    openingHours: ['Mo-Fr 08:00-18:00']
  },
  breadcrumbs: [
    { name: 'Home', url: '/' },
    { name: 'Team', url: '/team' }
  ],
  faqSchema: [
    {
      question: 'What experience does the KPS Group leadership team have?',
      answer: 'Our leadership team combines decades of experience in business operations, consulting, and client services. CEO Karson Lawrence specializes in business strategy and operations, CRO Brandon Gibson brings expertise in business development and growth planning, and CAO Allie Banks has nearly a decade of experience at ADP in payroll and compliance.'
    },
    {
      question: 'How does the team work together to serve clients?',
      answer: 'Our integrated approach means each team member brings their specialized expertise to every client engagement. Karson provides strategic direction, Brandon focuses on understanding client needs and growth opportunities, and Allie ensures flawless execution and ongoing support.'
    },
    {
      question: 'Can I work directly with the leadership team?',
      answer: 'Absolutely! As a boutique consulting firm, our clients work directly with our leadership team. You\'re not handed off to junior staff - you get the expertise and attention of our senior professionals throughout your engagement.'
    },
    {
      question: 'What makes the KPS Group team different from other consulting firms?',
      answer: 'Our team focuses exclusively on small and medium businesses, understanding the unique challenges you face. We combine enterprise-level expertise with personalized service, ensuring you get professional solutions that are practical and affordable for your business size.'
    }
  ]
};

const team = [
  {
    name: 'Karson Lawrence',
    title: 'Founder & CEO',
    image: '/team/karson/karson.jpg',
    bio: 'Karson founded The KPS Group to help small businesses get the professional support they deserve. With years of experience in business operations and consulting, he leads our team in delivering practical solutions that drive real results for our clients.',
    skills: ['Business Strategy', 'Operations', 'Leadership', 'Consulting'],
    phone: '469-458-6966',
    email: 'karson@thekpsgroup.com'
  },
  {
    name: 'Brandon Gibson',
    title: 'Chief Revenue Officer',
    image: '/team/brandon/brandon.jpg',
    bio: 'Brandon brings extensive experience in business development and client relationships. He works closely with clients to understand their needs and ensures they receive the right solutions to help their businesses grow and thrive.',
    skills: ['Business Development', 'Client Relations', 'Sales Strategy', 'Growth Planning'],
    phone: '469-458-6966',
    email: 'brandon@thekpsgroup.com'
  },
  {
    name: 'Allie Banks',
    title: 'Chief Administrative Officer',
    image: '/team/allie/CAO-Allie.jpg',
    bio: 'Allie ensures smooth operations and exceptional service delivery. With nearly a decade of experience at ADP, she brings deep expertise in payroll, compliance, and operational excellence to help our clients succeed.',
    skills: ['Operations', 'Compliance', 'Service Delivery', 'Process Management'],
    phone: '469-458-6966',
    email: 'allie@thekpsgroup.com'
  }
];
---

<BaseLayout>
  <AdvancedSEOHead {...seoProps} slot="head" />
  
  <!-- Preload critical team images -->
  <link rel="preload" as="image" href="/team/karson/CEO-Karson.png.jpg" slot="head" />
  <link rel="preload" as="image" href="/team/brandon/CRO-Brandon.jpg.jpg" slot="head" />
  <link rel="preload" as="image" href="/team/allie/CAO-Allie.jpg" slot="head" />
  
  <!-- Enhanced Team Section -->
  <section class="relative py-16 sm:py-20 md:py-24 lg:py-32 px-4 sm:px-6 md:px-8 lg:px-12 max-w-7xl mx-auto">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-gradient-to-br from-gold/5 via-transparent to-goldLight/5 rounded-3xl"></div>
    
    <div class="relative z-10">
      <!-- Header Section -->
      <div class="text-center mb-12 sm:mb-16 lg:mb-20">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 bg-gold/10 border border-gold/30 rounded-full px-3 sm:px-4 py-2 mb-4 sm:mb-6">
          <div class="w-2 h-2 bg-gold rounded-full animate-pulse"></div>
          <span class="text-xs sm:text-sm font-medium text-gold">Leadership Team</span>
        </div>

        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-extrabold text-goldLight mb-6 sm:mb-8 leading-tight">Meet Our Team</h1>
        <p class="text-lg sm:text-xl md:text-2xl text-gold/80 max-w-4xl mx-auto leading-relaxed">
          The experienced professionals behind The KPS Group — dedicated to helping small businesses transform their operations and achieve lasting success.
        </p>
      </div>

      <!-- Enhanced Team Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 sm:gap-10 lg:gap-12">
        {team.map((member, index) => (
          <div class="group bg-gray-900/60 border border-goldDark/20 rounded-2xl p-6 sm:p-8 text-center hover:border-gold/40 hover:bg-gray-900/80 transition-all duration-300 backdrop-blur-sm">
            <div class="relative z-10">
              <!-- Profile Image -->
              <div class="relative mb-6">
                <div class="w-44 h-44 mx-auto rounded-full border-3 border-goldDark/30 group-hover:border-gold/50 transition-colors duration-300 overflow-hidden">
                  <img
                    src={member.image}
                    alt={`${member.name} headshot`}
                    class="w-full h-full object-cover object-[center_20%] group-hover:scale-105 transition-transform duration-300"
                    loading="eager"
                    decoding="async"
                    width="176"
                    height="176"
                    style="background: linear-gradient(135deg, #d4af37, #b8941f); min-height: 176px;"
                    onload="this.style.backgroundColor='transparent'"
                    onerror="this.style.backgroundColor='#d4af37'; this.style.backgroundImage='linear-gradient(135deg, #d4af37, #b8941f)'; this.alt='Photo loading...'; console.log('Image failed to load:', this.src);"
                  />
                </div>
              </div>

              <!-- Member Info -->
              <h2 class="text-xl sm:text-2xl font-bold text-goldLight mb-2">{member.name}</h2>
              <p class="text-gold/80 font-medium mb-4 text-sm sm:text-base">{member.title}</p>
              <p class="text-gray-300 text-sm leading-relaxed mb-6">{member.bio}</p>

              <!-- Contact Info -->
              <div class="flex justify-center gap-4">
                <a
                  href={`mailto:${member.email}`}
                  class="w-10 h-10 bg-gold/20 rounded-full flex items-center justify-center text-gold hover:bg-gold hover:text-black transition-all duration-200"
                  aria-label={`Email ${member.name}`}
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </a>
                <a
                  href={CONTACT.phoneHref}
                  class="w-10 h-10 bg-gold/20 rounded-full flex items-center justify-center text-gold hover:bg-gold hover:text-black transition-all duration-200"
                  aria-label={`Call ${member.name}`}
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Company Stats -->
      <div class="mt-12 sm:mt-16 lg:mt-20 grid grid-cols-1 md:grid-cols-4 gap-4 sm:gap-6">
        <div class="text-center p-4 sm:p-6 bg-gradient-to-b from-gold/10 to-transparent rounded-xl border border-gold/20">
          <div class="text-2xl sm:text-3xl font-bold text-goldLight mb-1 sm:mb-2">3</div>
          <div class="text-xs sm:text-sm text-gold/80">C-Level Executives</div>
        </div>
        <div class="text-center p-4 sm:p-6 bg-gradient-to-b from-gold/10 to-transparent rounded-xl border border-gold/20">
          <div class="text-2xl sm:text-3xl font-bold text-goldLight mb-1 sm:mb-2">15+</div>
          <div class="text-xs sm:text-sm text-gold/80">Years Combined</div>
        </div>
        <div class="text-center p-4 sm:p-6 bg-gradient-to-b from-gold/10 to-transparent rounded-xl border border-gold/20">
          <div class="text-2xl sm:text-3xl font-bold text-goldLight mb-1 sm:mb-2">50+</div>
          <div class="text-xs sm:text-sm text-gold/80">Projects Delivered</div>
        </div>
        <div class="text-center p-4 sm:p-6 bg-gradient-to-b from-gold/10 to-transparent rounded-xl border border-gold/20">
          <div class="text-2xl sm:text-3xl font-bold text-goldLight mb-1 sm:mb-2">100%</div>
          <div class="text-xs sm:text-sm text-gold/80">Client Satisfaction</div>
        </div>
      </div>

      <!-- Team Philosophy -->
      <div class="mt-12 sm:mt-16 lg:mt-20 text-center">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-goldLight mb-4 sm:mb-6">Our Philosophy</h2>
        <p class="text-lg sm:text-xl text-gold/80 max-w-4xl mx-auto leading-relaxed mb-6 sm:mb-8">
          We believe great branding isn't just about looking good—it's about creating strategic assets that drive business growth. Our team combines creative excellence with operational precision to deliver results that matter.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 sm:gap-3 bg-gradient-to-r from-gold to-goldLight text-black px-6 sm:px-8 lg:px-10 py-3 sm:py-4 rounded-full font-semibold text-base sm:text-lg hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-gold/20 active:scale-95"
        >
          <svg class="w-5 sm:w-6 h-5 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          <span class="hidden sm:inline">Work With Our Team</span>
          <span class="sm:hidden">Work With Us</span>
        </a>
      </div>
          Work With Our Team
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
